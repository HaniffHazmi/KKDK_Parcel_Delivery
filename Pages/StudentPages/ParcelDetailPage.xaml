<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KKDK_Parcel_Delivery.Pages.StudentPages.ParcelDetailPage"
             Title="ParcelDetailPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <!-- Parcel ID -->
        <Label Text="Parcel ID:" FontAttributes="Bold" />
        <Label x:Name="ParcelIdLabel" />

        <!-- Tracking Number -->
        <Label Text="Tracking Number:" FontAttributes="Bold" />
        <Label x:Name="TrackingNumberLabel" />

        <!-- Courier -->
        <Label Text="Courier:" FontAttributes="Bold" />
        <Label x:Name="CourierLabel" />

        <!-- Date Arrived -->
        <Label Text="Date Arrived:" FontAttributes="Bold" />
        <Label x:Name="DateArrivedLabel" />

        <!-- Status -->
        <Label Text="Status:" FontAttributes="Bold" />
        <Label x:Name="ParcelStatusLabel" />

        <!-- Receiver's Name -->
        <Label Text="Receiver's Name:" FontAttributes="Bold" />
        <Label x:Name="ReceiverNameLabel" />

        <!-- Back Button -->
        <Button Text="Back" Clicked="OnBackClicked" />
    </VerticalStackLayout>
</ContentPage>