<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KKDK_Parcel_Delivery.Pages.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20">
        <Label Text="Login" FontSize="Large" HorizontalOptions="Center" />

        <Entry x:Name="MatricNumberEntry" Placeholder="Enter your Matric Number" Keyboard="Text" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />

        <Label Text="Don't have an account?" HorizontalOptions="Center" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
