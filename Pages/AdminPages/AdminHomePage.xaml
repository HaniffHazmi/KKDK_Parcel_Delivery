<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KKDK_Parcel_Delivery.Pages.AdminPages.AdminHomePage"
             Title="AdminHomePage">
    <VerticalStackLayout>
        <!-- Welcome Message -->
        <Label Text="Welcome, Admin!" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Parcel List" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Clicked="OnParcelListClicked"/>

        <!-- Logout Button -->
        <Button 
            Text="Logout" 
            Clicked="OnLogoutClicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>